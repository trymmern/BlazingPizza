@page "/"
@inject HttpClient HttpClient
@inject NavigationManager NavigationManager

<PageTitle>Blazing Pizza</PageTitle>

<div class="main">
    <ul class="pizza-cards">
        @if (_specials != null)
        {
            @foreach (var special in _specials)
            {
                <li @onclick="() => ShowConfiguringPizzaDialog(special)" style="background-image: url('@special.ImageUrl')">
                    <div class="pizza-info">
                        <span class="title">@special.Name</span>
                        @special.Description
                        <span class="price">@special.GetFormattedBasePrice()</span>
                    </div>
                </li>
            }
        }
    </ul>
</div>

<div class="sidebar">
    @if (_order.Pizzas.Any())
    {
        <div class="order-contents">
            <h2>Your order</h2>
            
            @foreach (var configuredPizza in _order.Pizzas)
            {
                <ConfiguredPizzaItem Pizza="configuredPizza" OnRemoved="@(() => RemoveConfiguredPizza(configuredPizza))" />
            }
        </div>
    }
    else
    {
        <div class="empty-cart">Choose a pizza<br/>to get started</div>
    }
    
    <div class="order-total @(_order.Pizzas.Any() ? "" : "hidden")">
        Total:
        <span class="total-price">@_order.GetFormattedTotalPrice()</span>
        <button class="btn btn-warning" disabled="@(_order.Pizzas.Count == 0)" @onclick="PlaceOrder">
            Order >
        </button>
    </div>
</div>

@if (_showConfiguringDialog)
{
    <ConfigurePizzaDialog Pizza="_configuringPizza" OnCancel="CancelConfigurePizzaDialog" OnConfirm="ConfirmConfigurePizzaDialog"/>
}

@code
{
    List<PizzaSpecial> _specials;
    Pizza _configuringPizza;
    bool _showConfiguringDialog;
    Order _order = new();

    protected override async Task OnInitializedAsync()
    {
        _specials = await HttpClient.GetFromJsonAsync("specials", OrderContext.Default.ListPizzaSpecial);
    }

    void ShowConfiguringPizzaDialog(PizzaSpecial special)
    {
        _configuringPizza = new Pizza
        {
            Special = special,
            SpecialId = special.Id,
            Size = Pizza.DefaultSize,
            Toppings = new List<PizzaTopping>()
        };

        _showConfiguringDialog = true;
    }

    void CancelConfigurePizzaDialog()
    {
        ResetConfiguringPizza();
    }

    void ConfirmConfigurePizzaDialog()
    {
        _order.Pizzas.Add(_configuringPizza);
        ResetConfiguringPizza();
    }

    void ResetConfiguringPizza()
    {
        _configuringPizza = null;
        _showConfiguringDialog = false;
    }

    void RemoveConfiguredPizza(Pizza pizza)
    {
        _order.Pizzas.Remove(pizza);
    }

    async Task PlaceOrder()
    {
        var res = await HttpClient.PostAsJsonAsync("orders", _order);
        var newOrderId = await res.Content.ReadFromJsonAsync<int>();
        _order = new Order();
        NavigationManager.NavigateTo($"myorders/{newOrderId}");
    }
}
